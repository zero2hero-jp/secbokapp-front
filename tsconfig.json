{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@Commons/*": [
        "./src/components/commons/*",
      ],
      "@Components/*": [
        "./src/components/*"
      ],
      "@Pages/*": [
        "./src/pages/*"
      ],
      "@Types/*": [
        "./types/*"
      ],
      "@Utils/*": [
        "./utils/*"
      ],
      "@Styles/*": [
        "./styles/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}